{
  "compilerOptions": {
    "module": "ES6", // 모듈 시스템
    "target": "ES6", // 최신 ES6 이상을 지원
    "declaration": true, // 타입 파일 생성
    "declarationMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["./*"],
      "@enums/*": ["./src/enums/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@types/*": ["./src/types/*"]
    },
    "outDir": "./dist",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
